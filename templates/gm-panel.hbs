<section class="ninja-notes-container">
  <div class="notes-list">
    {{#if notes.length}}
      {{#each notes}}
        <div class="ninja-note" style="border-left-color: {{this.senderColor}};">
          <div class="note-header">
            <strong class="sender-name">{{this.senderName}}</strong>
            <span class="note-time">{{this.timestamp}}</span>
          </div>
          <p class="note-message">{{{this.escapedMessage}}}</p>
          <button class="note-dismiss"
                  data-action="dismissNote"
                  data-note-index="{{this.index}}"
                  title="Dismiss this note">
            <i class="fas fa-times"></i>
          </button>
        </div>
      {{/each}}
    {{else}}
      <div class="no-notes">
        <p class="empty-icon"><i class="fas fa-scroll"></i></p>
        <p class="empty-label">No notes received.</p>
        <p>Waiting for whispers.</p>
      </div>
    {{/if}}
  </div>
</section>
